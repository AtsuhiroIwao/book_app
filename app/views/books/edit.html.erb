<h1 class="editing">Editing Book</h1>

<% if @book.errors.any? %>
<div class="error-all">
<div class="error">
  <%= @book.errors.count %>errors prohibited this book from being saved:
</div>
  <ul class="message">
    <% @book.errors.full_messages.each do |message| %>
      <li class="li"><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>

<%= form_with model: @book,url:update_book_path(@book.id),method: :patch do |f| %>

<div class="edit-title">
  <h4>Title</h4>
  <%= f.text_field :title %>
</div>  
  
 <div class="edit-body">
  <h4>Body</h4>
  <%= f.text_area :body %>
</div>  
  
  <div class="kousin">
  <%= f.submit 'Update Book' %>
  </div>
  
  <div class="link">
  <%= link_to "Show", book_path(@book.id) %>
  |
  <a href="/books">Back</a>
  </div>
  
<% end %>

